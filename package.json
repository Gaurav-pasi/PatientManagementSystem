{
  "name": "patient-management-system",
  "version": "1.0.0",
  "description": "A comprehensive patient management system with Express.js backend and React frontend",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Gaurav-pasi/PatientManagementSystem.git"
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "start": "npm run start:backend",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm run dev",
    "dev": "npm run dev:all",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:all": "concurrently -n \"backend,frontend\" -c \"blue,green\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "test": "cd backend && npm test",
    "test:backend": "cd backend && npm test",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules",
    "lint": "cd frontend && npm run lint",
    "typecheck": "cd backend && npx tsc --noEmit && cd ../frontend && npx tsc --noEmit"
  },
  "keywords": [
    "healthcare",
    "patient-management",
    "express",
    "react",
    "typescript"
  ],
  "author": "Gaurav Pasi <gauravpasi9594@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
